@model UserManagement.Web.Models.Users.UserListItemViewModel

@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">User Information</h5>
        <dl>
            <dt>Forename:</dt>
            <dd>@Model.Forename</dd>
            <dt>Surname:</dt>
            <dd>@Model.Surname</dd>
            <dt>Email:</dt>
            <dd>@Model.Email</dd>
            <dt>Date of Birth:</dt>
            <dd>@(Model.DateOfBirth?.ToString("dd MMM, yyyy"))</dd>
            <dt>Account Active:</dt>
            <dd>@(Model.IsActive ? "Yes" : "No")</dd>
        </dl>
    </div>
</div>
